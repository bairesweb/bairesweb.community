{
	"name": "bairesweb.community",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"firebase": "3.9.0",
		"promise": "8.0.1",
		"prop-types": "15.5.10",
		"react": "15.6.1",
		"react-dom": "15.6.1",
		"react-flexbox-grid": "1.1.5",
		"react-router-dom": "4.2.2"
	},
	"devDependencies": {
		"autoprefixer": "7.1.2",
		"babel-core": "6.25.0",
		"babel-eslint": "7.2.3",
		"babel-jest": "20.0.3",
		"babel-loader": "7.1.1",
		"babel-preset-react-app": "3.0.2",
		"babel-runtime": "6.26.0",
		"case-sensitive-paths-webpack-plugin": "2.1.1",
		"chalk": "1.1.3",
		"check-node-version": "2.1.0",
		"css-loader": "0.28.4",
		"dotenv": "4.0.0",
		"eslint": "4.5.0",
		"eslint-config-prettier": "2.4.0",
		"eslint-config-react-app": "2.0.0",
		"eslint-loader": "1.9.0",
		"eslint-plugin-flowtype": "2.35.1",
		"eslint-plugin-import": "2.7.0",
		"eslint-plugin-jsx-a11y": "5.1.1",
		"eslint-plugin-react": "7.3.0",
		"extract-text-webpack-plugin": "3.0.0",
		"file-loader": "0.11.2",
		"fs-extra": "3.0.1",
		"html-webpack-plugin": "2.29.0",
		"husky": "0.14.3",
		"jest": "20.0.4",
		"lint-staged": "4.1.3",
		"node-sass": "4.5.3",
		"npm-lint-locked": "0.1.0",
		"object-assign": "4.1.1",
		"postcss-flexbugs-fixes": "3.2.0",
		"postcss-loader": "2.0.6",
		"prettier": "1.6.1",
		"react-dev-utils": "4.0.1",
		"resolve-url-loader": "2.1.0",
		"sass-loader": "6.0.6",
		"style-loader": "0.18.2",
		"stylelint": "8.0.0",
		"stylelint-config-standard": "17.0.0",
		"sw-precache-webpack-plugin": "0.11.4",
		"url-loader": "0.5.9",
		"webpack": "3.5.1",
		"webpack-dev-server": "2.7.1",
		"webpack-manifest-plugin": "1.2.1",
		"whatwg-fetch": "2.0.3"
	},
	"scripts": {
		"start": "node scripts/start.js",
		"build": "node scripts/build.js",
		"test": "node scripts/test.js --env=jsdom",
		"lint:css": "./node_modules/.bin/stylelint \"./src/**/*.scss\" --syntax scss",
		"lint:js": "./node_modules/.bin/eslint --ext js --ext jsx src",
		"lint:versions": "./node_modules/.bin/npm-lint-locked",
		"lint:node": "./node_modules/.bin/check-node-version --node 6 --yarn 1",
		"lint:staged": "./node_modules/.bin/lint-staged",
		"lint": "yarn run lint:node && yarn run lint:versions && yarn run lint:js && yarn run lint:css",
		"deploy": "yarn run build && firebase deploy",
		"prepush": "yarn run lint",
		"precommit": "yarn run pre-commit-msg && yarn run lint:staged",
		"pre-commit-msg": "echo 'Pre-commit checks...' && exit 0"
	},
	"lint-staged": {
		"src/**/*.{scss,css,js,jsx}": ["./node_modules/.bin/prettier --write", "git add"],
		"+(package.json|yarn.lock)": ["node ./config/scripts/yarn-check.js"]
	},
	"jest": {
		"collectCoverageFrom": ["src/**/*.{js,jsx}"],
		"setupFiles": ["<rootDir>/config/polyfills.js"],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.js?(x)",
			"<rootDir>/src/**/?(*.)(spec|test).js?(x)"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
			"^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
		"moduleNameMapper": {
			"^react-native$": "react-native-web"
		},
		"moduleFileExtensions": ["web.js", "js", "json", "web.jsx", "jsx", "node"]
	},
	"babel": {
		"presets": ["react-app"]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": null,
			"block-no-empty": null,
			"rule-empty-line-before": null,
			"declaration-colon-newline-after": null,
			"block-opening-brace-space-before": null,
			"no-missing-end-of-source-newline": null,
			"at-rule-empty-line-before": null,
			"selector-descendant-combinator-no-non-space": null,
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": ["include", "mixin", "each", "extend", "for", "include"]
				}
			],
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": ["global"]
				}
			],
			"selector-pseudo-element-colon-notation": null
		},
		"defaultSeverity": "warning",
		"ignoreFiles": ["src/styles/**/*.scss"]
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"semi": true,
		"jsxBracketSameLine": true
	},
	"browserlist": [">1%", "last 4 versions", "not ie < 9"]
}
